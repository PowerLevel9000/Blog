<div class="card border-success m-3">
    <div class="card-header bg-transparent p-0 "><%= render 'users/user_badge', user: post.author %></div>
    <div class="card-body text-success">
      <h5 class="card-title"><%= link_to post.title, user_post_path(post.author, post) %></h5>
      <p class="card-text"><%= post.text%></p>
    </div>
    <div class="card-footer bg-secondary text-light border-success">Posted on : <%= post.created_at.strftime("%Y-%m-%d") %></div>
</div>