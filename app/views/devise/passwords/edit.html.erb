<div class="log p-5">

  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-3">
      <%= f.label :password, "New password", class: "form-lebel" %><br/>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          characters minimum)</em><br/>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "from-control w-75" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, "Confirm new password", class: "form-lebel" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "from-control w-75" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
